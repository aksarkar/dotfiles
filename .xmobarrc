-- -*- mode: Haskell -*-

Config { font = "xft:Consolas-7:bold"
       , bgColor = "#002b36"
       , fgColor = "#93a1a1"
       , position = Top
       , commands = [ Run Date "%a %b %_d %Y %H:%M" "date" 60
                    , Run Battery ["-t", "Batt: <left>%"] 60
                    , Run StdinReader
                    ]
       , template = "%StdinReader%}{ %battery% | %date%"
       }
