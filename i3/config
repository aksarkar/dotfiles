bindsym XF86AudioNext exec "quodlibet --next"
bindsym XF86AudioPlay exec "quodlibet --play-pause"
bindsym XF86AudioPrev exec spawn "quodlibet --previous"
bindsym XF86AudioRaiseVolume exec "amixer sset Master +3%"
