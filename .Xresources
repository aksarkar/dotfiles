! Emacs
Emacs.font: Consolas:pixelsize=14
Emacs.geometry: 80x43

! Xcursor
Xcursor*theme: Chameleon-Anthracite-Small

! URxvt
URxvt*font: xft:Consolas:pixelsize=14
URxvt*scrollBar: false
URxvt*perl-ext-common: default,matcher
URxvt.urlLauncher: conkeror
URxvt.matcher.button: 1
URxvt.urgentOnBell: true

! Zenburn colors
*background: #3f3f3f
*foreground: #dcdccc
! black
*color0: #202020
*color8: #709080 
! red
*color1: #705050 
*color9: #dca3a3 
! green
*color2: #5f7f5f
*color10: #afd8af
! yellow
*color3: #dfaf8f
*color11: #f0dfaf
! blue
*color4: #5c888b
*color12: #94bff3
! magenta
*color5: #dc8cc3 
*color13: #ec93d3
! cyan
*color6: #8cd0d3 
*color14: #93e0e3
!white
*color7: #3f3f3f
*color15: #ffffff

! Xft
Xft.dpi: 96
Xft.antialias: true
Xft.hinting: true
Xft.hintstyle: hintslight
Xft.rgba: rgb
